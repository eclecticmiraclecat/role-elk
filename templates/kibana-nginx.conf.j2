server {

    listen 0.0.0.0:80;
    server_name {{ elk_nginx_server_name }};

    location / {
        proxy_pass http://127.0.0.1:5601/;
        auth_basic "Login to Kibana web interface";
        auth_basic_user_file /etc/nginx/conf.d/kibana.htpasswd;
        proxy_redirect off;
        proxy_buffering off;
    }

}
